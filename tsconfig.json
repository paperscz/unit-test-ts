{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@/*": [
        "src/*"
      ]
    },
    "lib": ["es7"]
  },
  "include": ["./src/**/*", "./test/**/*"]
}
